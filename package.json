{
  "name": "movie-booking",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "tsc": "tsc --noEmit",
    "format": "prettier \"**/*.{ts,tsx,js,json}\" --ignore-path .gitignore",
    "format:check": "npm run format -- --check",
    "format:write": "npm run format -- --write",
    "validate": "npm run format:write && npm run tsc && npm run lint && npm run build",
    "prepare": "husky",
    "ngrok": "ngrok http 3000",
    "cloc": "npx cloc --exclude-dir=node_modules,dist,build,pnpm-lock.yaml,package.json,@generated,generated,.next ."
  },
  "dependencies": {
    "@clerk/nextjs": "^6.11.3",
    "@prisma/client": "^6.3.1",
    "next": "15.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "lint-staged": "^15.4.3",
    "ngrok": "^5.0.0-beta.2",
    "postcss": "^8",
    "prettier": "^3.5.1",
    "prisma": "^6.3.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
